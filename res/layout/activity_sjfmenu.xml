<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SJFMenuActivity" >

    <Button
        android:id="@+id/nextbtnSJF"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="530dp"
        android:background="@color/green"
        android:text="NEXT"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="22dp"
        android:text="@string/SJF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/green"
        android:textSize="35sp"
        android:typeface="serif"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="490dp"
        android:layout_marginTop="20dp"
        android:text="@string/algorithm"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/green"
        android:textSize="35sp"
        android:typeface="serif"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/infoSJF"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="300dp"
        android:background="@color/green"
        android:text="@string/info"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="200dp" 
		android:layout_marginLeft="65dp"    
        android:layout_marginBottom="82dp"
        android:text="@string/process1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/TextView02"
        android:text="@string/process3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_marginBottom="24dp"
        android:text="@string/process2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <EditText
        android:id="@+id/burstTimeSJF1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="460dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/burstTimeSJF2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="460dp"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="150dp"
        android:text="@string/arrival"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="460dp"
        android:layout_marginTop="150dp"
        android:text="@string/burst"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <EditText
        android:id="@+id/arrivalTimeSJF1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="260dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/arrivalTimeSJF2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:layout_marginLeft="260dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/burstTimeSJF3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
   		android:layout_marginTop="310dp"
        android:layout_marginLeft="460dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/arrivalTimeSJF3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="260dp"
        android:ems="10"
        android:inputType="number" />

</RelativeLayout>