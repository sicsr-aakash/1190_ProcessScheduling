<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MenuActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="56dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/RR"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/fcfs"
        android:text="@string/RR"
        android:textColor="@android:color/white"
        android:background="@color/green"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_marginLeft="300dp"
        android:text="@string/PS"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="44sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginLeft="92dp"
        android:text="@string/algo"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="44sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/sjf"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_below="@+id/RR"
        android:layout_marginLeft="420dp"
        android:background="@color/green"
        android:text="@string/SJF"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/fcfs"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/RR"
        android:layout_marginLeft="52dp"
        android:layout_toRightOf="@+id/imageView1"
        android:background="@color/green"
        android:text="@string/fcfs"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

</RelativeLayout>