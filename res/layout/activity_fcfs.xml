<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".FCFSActivity" >

    <TextView
        android:id="@+id/text1"
        android:layout_width="598dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:text="@string/fcfs"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/green"
        android:textSize="36sp"
        android:gravity="center"
        android:typeface="serif"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:background="@color/lightyellow"
        android:gravity="center"
        android:text="@string/working"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:typeface="serif"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/explain"
        android:layout_width="200dp"
        android:layout_height="470dp"
        android:layout_alignLeft="@+id/text2"
        android:layout_below="@+id/text2"
        android:background="@color/lightyellow"
        android:textColor="@color/maroon"
        android:textSize="16sp"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideOverlay"
        android:text="" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text4"
        android:layout_alignBottom="@+id/text4"
        android:layout_marginLeft="55dp"
        android:layout_toRightOf="@+id/text4"
        android:text="@string/two"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text5"
        android:layout_alignBottom="@+id/text5"
        android:layout_marginLeft="52dp"
        android:layout_toRightOf="@+id/text5"
        android:text="@string/four"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text6"
        android:layout_alignBottom="@+id/text6"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/text6"
        android:textStyle="bold"
        android:textSize="26sp"
        android:text="@string/six"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text7"
        android:layout_alignBottom="@+id/text7"
        android:layout_marginLeft="53dp"
        android:layout_toRightOf="@+id/text7"
        android:text="@string/eight"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text8"
        android:layout_alignBottom="@+id/text8"
        android:layout_marginLeft="53dp"
        android:layout_toRightOf="@+id/text8"
        android:text="@string/ten"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text9"
        android:layout_alignBottom="@+id/text9"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@+id/text9"
        android:text="@string/twelve"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text10"
        android:layout_alignBottom="@+id/text10"
        android:layout_alignRight="@+id/text1"
        android:layout_marginRight="37dp"
        android:text="@string/fourteen"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text12"
        android:layout_width="531dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/explain"
        android:layout_marginLeft="68dp"
        android:background="@color/violet"
        android:text="@string/time"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text12"
        android:layout_marginLeft="70dp"
        android:text="@string/zero"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text13"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="175dp"
        android:text="@string/p1"
        android:textSize="28sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white" 
        android:background="@color/blueback"/>

    <TextView
        android:id="@+id/text14"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text13"
        android:layout_marginTop="262dp"
        android:text="@string/p2"
        android:textSize="28sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white" 
        android:background="@color/orangeback"/>

    <TextView
        android:id="@+id/text15"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text14"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="46dp"
        android:text="@string/p3"
        android:textSize="28sp"
        android:gravity="center"
        android:textStyle="bold" 
        android:textColor="@android:color/white"
        android:background="@color/redback"/>

    <ImageView
        android:id="@+id/blue"
        android:contentDescription="@string/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="173dp"
        android:src="@drawable/bluerec" />
    
    <ImageView
        android:id="@+id/orange"
        android:contentDescription="@string/p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="259dp"
        android:src="@drawable/orangerec" />
    
    <ImageView
        android:id="@+id/red"
        android:contentDescription="@string/p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="346dp"
        android:src="@drawable/redrec" />

    <Button
        android:id="@+id/start"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/explain"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="@string/start" />

    <Button
        android:id="@+id/finish"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/explain"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="@string/finish" />
    
</RelativeLayout>