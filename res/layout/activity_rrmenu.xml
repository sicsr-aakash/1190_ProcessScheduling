<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".RRMenuActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="420dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        android:text="@string/algorithm"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/green"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        android:layout_marginLeft="120dp"
        android:text="@string/quantum"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/quantum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_alignTop="@+id/textView3"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_marginBottom="43dp"
        android:layout_marginLeft="120dp"
        android:text="@string/process3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp"
        android:textStyle="bold" 
        android:typeface="serif"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/burstTime3RR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignBaseline="@+id/textView4"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        android:text="@string/RR"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/green"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:text="@string/process2"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/burstTime2RR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_below="@+id/TextView02"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/burstTime1RR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="330dp"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/infoRR"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="400dp"
        android:background="@color/green"
        android:text="@string/info"
        android:layout_marginLeft="300dp"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  		android:layout_marginTop="130dp" 
  		android:layout_marginLeft="120dp"   
        android:text="@string/process1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_alignRight="@+id/burstTime1RR"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="36dp"
        android:text="@string/burst"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/infoRR"
        android:layout_alignBottom="@+id/infoRR"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/infoRR"
        android:background="@color/green"
        android:text="NEXT"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold|italic" />

</RelativeLayout>